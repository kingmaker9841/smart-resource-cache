{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,

    "noUnusedLocals": true,

    "skipLibCheck": true
  }
}
